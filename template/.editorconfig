
root = true

[*.md]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 88

[*.{yml,yaml,md,css,html,js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
end_of_line = lf
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf
trim_trailing_whitespace = false
